---
import { Image } from "astro:assets";

const { title, image, subtitle, slug } = Astro.props;
---

<div class="relative w-64 m-4 group">
    <div class="relative h-72 w-72 overflow-clip rounded-md">
        <Image
            class="absolute h-72 w-72 group-hover:scale-105 transition-all duration-300"
            src={image}
            alt="Banner image"
            width={600}
            height={600}
        />
        <div class="absolute bg-black w-full h-full opacity-80"></div>
    </div>

    <div
        class="absolute top-4 left-6 flex flex-col justify-start items-start text-white"
    >
        <span class="text-3xl font-bold w-72">{title}</span>
        <p class="text-md w-64">{subtitle}</p>
    </div>
    <a
        href={slug}
        class="absolute !w-72 text-center text-white bg-cyan-500 mt-2 rounded-md hover:bg-cyan-600 hover:text-white"
    >
        Confira
    </a>
</div>
